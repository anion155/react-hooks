{
  "name": "@anion155/react-hooks",
  "version": "0.1.1",
  "description": "React utility hooks",
  "author": {
    "name": "Anton Mikhailov",
    "email": "anion155@gmail.com"
  },
  "repository": "github:anion155/react-hooks",
  "license": "MIT",
  "private": false,
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "./utils.js",
    "./utils.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils.js"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "jest src",
    "build": "rimraf dist && rollup --bundleConfigAsCjs --config",
    "bump-version": "run-with-args 'pnpm version $1 && git add ./package.json && git commit -m \"bump: react-hooks $1\" && git tag \"react-hooks-v$1\"'",
    "prepack": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@monorepo/config": "workspace:*",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.25",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.4.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "tslib": "^2.4.1"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
